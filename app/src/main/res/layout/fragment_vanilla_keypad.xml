<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/vanilla_keypad_spin1"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/vanilla_keypad_spin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="263"
        tools:layout_conversion_wrapWidth="263" />

    <Spinner
        android:id="@+id/vanilla_keypad_spin2"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vanilla_keypad_spin1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="263"
        tools:layout_conversion_wrapWidth="263" />

    <Spinner
        android:id="@+id/vanilla_keypad_spin3"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/vanilla_keypad_spin4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_spin1"
        tools:layout_conversion_wrapHeight="263"
        tools:layout_conversion_wrapWidth="263" />

    <Spinner
        android:id="@+id/vanilla_keypad_spin4"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vanilla_keypad_spin3"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_spin2"
        tools:layout_conversion_wrapHeight="263"
        tools:layout_conversion_wrapWidth="263" />

    <Button
        android:id="@+id/vanilla_keypad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/generic_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_spin3" />

    <ImageView
        android:id="@+id/vanilla_keypad_img1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/vanilla_keypad_img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_button" />

    <ImageView
        android:id="@+id/vanilla_keypad_img2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/vanilla_keypad_img3"
        app:layout_constraintStart_toEndOf="@+id/vanilla_keypad_img1"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_button" />

    <ImageView
        android:id="@+id/vanilla_keypad_img4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vanilla_keypad_img3"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_button" />

    <ImageView
        android:id="@+id/vanilla_keypad_img3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/vanilla_keypad_img4"
        app:layout_constraintStart_toEndOf="@+id/vanilla_keypad_img2"
        app:layout_constraintTop_toBottomOf="@+id/vanilla_keypad_button" />
</androidx.constraintlayout.widget.ConstraintLayout>