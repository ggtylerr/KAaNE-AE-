<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/darkColorPrimary</item>
        <item name="android:actionBarStyle">@style/AppTheme.Dark.ActionBar</item>
        <item name="android:buttonTint">@color/darkColorPrimaryDark</item>
        <item name="android:buttonStyle">@style/AppTheme.Dark.Button</item>
    </style>
    <style name="AppTheme.Dark.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/darkColorPrimaryDark</item>
    </style>
    <style name="AppTheme.Dark.Button" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/darkColorPrimaryDark</item>
        <item name="color">@color/darkColorPrimaryDark</item>
        <item name="android:backgroundTint">@color/darkColorPrimaryDark</item>
    </style>
</resources>
